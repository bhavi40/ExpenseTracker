<?xml version="1.0" encoding="utf-8"?>
<!-- LinearLayout for wrapping two TextViews vertically -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"> <!-- Added padding for visual spacing -->

    <!-- TextView for displaying an expense value -->
    <TextView
        android:id="@+id/textViewExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Value"
        android:textSize="24sp"
        android:layout_marginBottom="8dp" /> <!-- Added margin for spacing -->

    <!-- TextView for displaying category type -->
    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Type"
        android:textSize="14sp" />
</LinearLayout>
